<UserControl x:Class="Example.BusinessApp.ItAdmin.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:mae="clr-namespace:Matisco.Wpf.Controls.Editors;assembly=Matisco.Wpf.Controls"
             xmlns:mab="clr-namespace:Matisco.Wpf.Controls.Buttons;assembly=Matisco.Wpf.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True" Focusable="False">
    <Grid Focusable="False">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <mae:TextEditor Label="Name" EditValue="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" ShowRequiredIndicator="True"/>

        <mae:TextEditor Label="Email" Size="Large" EditValue="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" 
                        ShowRequiredIndicator="True"/>

        <mab:Button Grid.Row="2" Image="Check" Text="Ok" Command="{Binding OkCommand}" HorizontalAlignment="Right"/>    
        
    </Grid>
</UserControl>
